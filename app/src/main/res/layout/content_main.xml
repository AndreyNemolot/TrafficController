<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity"
        android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="50">
        <ListView android:id="@+id/lvResult"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>

    <TableLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">
        <TableRow>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="GetClass"
                    android:id="@+id/btnGetClass"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="getSuperClass"
                    android:id="@+id/btnGetSuperClass"/>
        </TableRow>
        <TableRow>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="createDatatypeProperty"
                    android:id="@+id/btnCreateDataProperty"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="createObjectProperty"/>
        </TableRow>
        <TableRow>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="getDatatypeProperty"
                    android:id="@+id/btnGetDataProperty"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="getObjectProperty"
                    android:id="@+id/btnGetObjectProperty"/>
        </TableRow>
        <TableRow>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="createIndividual"
                    android:id="@+id/btnCreateIndividual"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnGetAllClasses"
                    android:hint="getAllClasses"/>
        </TableRow>


    </TableLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                  android:hint="Inpur request"
                  android:layout_gravity="bottom"
                  android:id="@+id/etRequest"/>

    </LinearLayout>

</LinearLayout>